# ==========================================
# Environment Configuration Example - MarketMeet Frontend
# ==========================================
# Copie este arquivo para .env e configure os valores para seu ambiente

# Backend API Configuration
# IP e porta do servidor backend centralizado
NG_APP_API_BASE_URL=http://10.51.47.41:3000/api
NG_APP_BACKEND_HOST=10.51.47.41
NG_APP_BACKEND_PORT=3000

# WebSocket Configuration
# URL do servidor WebSocket (mesmo servidor do backend)
NG_APP_WEBSOCKET_URL=http://10.51.47.41:3000
NG_APP_WEBSOCKET_HOST=10.51.47.41
NG_APP_WEBSOCKET_PORT=3000

# Frontend Configuration
# URL de acesso do frontend
NG_APP_FRONTEND_URL=http://localhost:4200

# API Endpoints
NG_APP_API_USERS_ENDPOINT=/api/users
NG_APP_API_FEED_ENDPOINT=/api/feed
NG_APP_API_POSTS_ENDPOINT=/api/posts
NG_APP_API_PROFILE_ENDPOINT=/api/profile

# Authentication Configuration
NG_APP_AUTH_TOKEN_KEY=auth_token
NG_APP_CURRENT_USER_KEY=current_user

# Environment Mode
# Valores: development, staging, production
NG_APP_ENVIRONMENT=development

# WebSocket Reconnection Settings
# Tempo em ms entre tentativas de reconexão
NG_APP_WS_RECONNECTION_DELAY=1000
# Tempo máximo em ms entre tentativas
NG_APP_WS_RECONNECTION_DELAY_MAX=5000
# Número de tentativas de reconexão
NG_APP_WS_RECONNECTION_ATTEMPTS=5

# Logging Configuration
# Valores: debug, info, warn, error
NG_APP_LOG_LEVEL=debug

# API Timeout (em ms)
NG_APP_API_TIMEOUT=30000
